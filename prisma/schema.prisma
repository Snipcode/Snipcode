datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  pastes   Paste[]  @relation("OwnPastes")
  sharedPastes Paste[] @relation("SharedPastes")
}

model Paste {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  content   String
  user      User     @relation("OwnPastes", fields: [userId], references: [id])
  userId    String
  public    Boolean  @default(false)
  shareAccessWith User[] @relation("SharedPastes")
}
